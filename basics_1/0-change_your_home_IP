#!/usr/bin/env bash
# Changes localhost to 127.0.0.2 and facebook.com to 8.8.8.8 in /etc/hosts

# Backup existing hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Filter out existing localhost and facebook.com lines, save to temp file
sudo grep -v -e 'localhost' -e 'facebook.com' /etc/hosts > /tmp/hosts_tmp

# Add the required lines to temp file
echo "127.0.0.2 localhost" | sudo tee -a /tmp/hosts_tmp > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /tmp/hosts_tmp > /dev/null

# Overwrite /etc/hosts with the temp file
sudo cp /tmp/hosts_tmp /etc/hosts
