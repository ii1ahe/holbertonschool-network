#!/usr/bin/env bash
# This script changes localhost to resolve to 127.0.0.2 and facebook.com to resolve to 8.8.8.8 on Ubuntu

# Backup current hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Remove any line with 127.0.0.1 localhost
sudo sed -i '/127\.0\.0\.1\s\+localhost/d' /etc/hosts

# Append required entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

